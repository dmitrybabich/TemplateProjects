<Window x:Class="WpfApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol" xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors">
    <Grid>
        <dxlc:LayoutControl Name="layoutControl1">
            <dxlc:LayoutGroup Orientation="Vertical">
                <Button Content="Button" Height="24" HorizontalAlignment="Left" Name="button1" VerticalAlignment="Top" Width="117" />
                <dxlc:LayoutGroup Header="LayoutGroup" Name="layoutGroup1" View="Tabs">
                    <dxlc:LayoutGroup Header="Tab" Name="layoutGroup2" />
                </dxlc:LayoutGroup>
            </dxlc:LayoutGroup>
            <dxlc:LayoutGroup Orientation="Vertical">
                <dxlc:LayoutItem Label="layoutItem1" Name="layoutItem1">
                    <dxe:TextEdit Name="textEdit1" />
                </dxlc:LayoutItem>
                <dxlc:LayoutGroup Header="LayoutGroup" Name="layoutGroup3" View="GroupBox" />
            </dxlc:LayoutGroup>
        </dxlc:LayoutControl>
    </Grid>
</Window>
